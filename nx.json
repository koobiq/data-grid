{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "neverConnectToCloud": true,
    "targetDefaults": {
        "@angular-devkit/build-angular:application": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"]
        },
        "@nx/angular:ng-packagr-lite": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"]
        }
    },
    "generators": {
        "@nx/angular:application": {
            "e2eTestRunner": "none",
            "linter": "none",
            "style": "scss",
            "unitTestRunner": "none"
        },
        "@nx/angular:library": {
            "linter": "none",
            "unitTestRunner": "none"
        },
        "@nx/angular:component": {
            "style": "scss",
            "changeDetection": "OnPush",
            "skipTests": true,
            "inlineTemplate": true,
            "inlineStyle": true
        }
    }
}
