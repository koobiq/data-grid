{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": ".",
      "sourceMap": true,
      "declaration": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "importHelpers": true, 
      "target": "ES2022",
      "lib": ["ES2022", "dom"],
      "skipLibCheck": true, 
      "skipDefaultLibCheck": true,
      "typeRoots": ["node_modules/@types"],
      "types": ["node"],
      "strict": true,
      "noImplicitAny": true
    },
    "exclude": ["node_modules", "tmp"]
  }
  